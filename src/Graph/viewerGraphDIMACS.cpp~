#include<iostream>
#include<string>
#include<sstream>
#include<iomanip>

#include"Graph.h"

using namespace std;


int main(int argc,char**argv){

  ostringstream fname;
  string name, nameext;
  int i,j;

  if(argc!=2){
    cerr<<"usage: "<<argv[0]<<" <DIMACS file name >"<<endl;
    cerr<<"    Graph instance having the DIMACS format (*.dim)"<<endl;
    return 1;
  }

  fname.str("");
  fname<<argv[1];
  size_t lastdot = fname.str().find_last_of(".");
  if (lastdot == std::string::npos) {
    name=fname.str();
    fname<<".dim";
    nameext=fname.str();
  }
  else {
    nameext=fname.str();
    name=fname.str();
    name.erase(name.find_last_of("."), std::string::npos); 
  }


  ifstream fic(nameext.c_str());

  if (fic==NULL){
    cerr<<"file "<<nameext<<" "<<" not found"<<endl;
    return 1;
  }

  C_Graph G;

  G.read_undirected_DIMACS(fic);

  fic.close();

  G.write_dot_G(name.c_str());


  return 0;
}
